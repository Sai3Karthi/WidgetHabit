<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/habit_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#40FFFFFF"> <!-- Semi-transparent white background for each item -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/habit_title_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/habit_progress_container"
            android:text="Habit Title"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <LinearLayout
            android:id="@+id/habit_progress_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/habit_time_icon_widget"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_access_time_white" />

            <TextView
                android:id="@+id/habit_time_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="HH:MM am/pm"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/habit_progress_widget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="X/Y"
                android:textColor="#B3FFFFFF"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/habit_star_widget"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_star_border_white" />

        </LinearLayout>

    </RelativeLayout>

    <!-- Weekly Date Picker - For simplicity in widget, we'll keep it static or update via intent -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:weightSum="7">

        <TextView style="@style/DayOfWeekStyle" android:text="M" />
        <TextView style="@style/DayOfWeekStyle" android:text="T" />
        <TextView style="@style/DayOfWeekStyle" android:text="W" />
        <TextView style="@style/DayOfWeekStyle" android:text="T" />
        <TextView style="@style/DayOfWeekStyle" android:text="F" />
        <TextView style="@style/DayOfWeekStyle" android:text="S" />
        <TextView style="@style/DayOfWeekStyle" android:text="S" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weekly_dates_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7">

        <!-- Dates will be populated dynamically or static for now -->
        <TextView style="@style/DayDateStyle" android:text="16" />
        <TextView style="@style/DayDateStyle" android:text="17" />
        <TextView style="@style/DayDateStyle" android:text="18" />
        <TextView style="@style/DayDateStyle" android:text="19" android:background="@drawable/current_day_background" android:textColor="#000000"/>
        <TextView style="@style/DayDateStyle" android:text="20" />
        <TextView style="@style/DayDateStyle" android:text="21" />
        <TextView style="@style/DayDateStyle" android:text="22" />
    </LinearLayout>

    <!-- Tick/Cross Off Button (Initially hidden, will be made visible when needed) -->
    <ImageView
        android:id="@+id/tick_cross_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_check_circle_outline_white" />

</LinearLayout> 