<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="@dimen/widget_space_xs">

    <!-- Habit Info -->
    <LinearLayout
        android:id="@+id/habit_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Color indicator -->
        <View
            android:id="@+id/habit_color_indicator"
            android:layout_width="@dimen/widget_habit_color_bar_width"
            android:layout_height="@dimen/widget_habit_color_bar_height"
            android:background="@color/widget_accent_blue"
            android:layout_marginEnd="@dimen/widget_space_s" />

        <!-- Title and time -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/habit_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morning Workout"
                    android:textColor="@color/widget_primary_text"
                    android:textSize="@dimen/widget_text_title"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Favorite star -->
                <ImageView
                    android:id="@+id/habit_favorite_star"
                    android:layout_width="@dimen/widget_icon_small"
                    android:layout_height="@dimen/widget_icon_small"
                    android:src="@android:drawable/btn_star"
                    android:tint="@color/widget_favorite_amber"
                    android:layout_marginStart="@dimen/widget_space_xs"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/habit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:00 AM"
                android:textColor="@color/widget_secondary_text"
                android:textSize="@dimen/widget_text_small" />

        </LinearLayout>

    </LinearLayout>

    <!-- Weekly completion dots -->
    <LinearLayout
        android:id="@+id/habit_completion_dots_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/completion_day_0"
            android:layout_width="@dimen/widget_completion_dot_small"
            android:layout_height="@dimen/widget_completion_dot_small"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/widget_completion_dot_incomplete" />

        <ImageView
            android:id="@+id/completion_day_1"
            android:layout_width="@dimen/widget_completion_dot_small"
            android:layout_height="@dimen/widget_completion_dot_small"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/widget_completion_dot_incomplete" />

        <ImageView
            android:id="@+id/completion_day_2"
            android:layout_width="@dimen/widget_completion_dot_small"
            android:layout_height="@dimen/widget_completion_dot_small"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/widget_completion_dot_incomplete" />

        <ImageView
            android:id="@+id/completion_day_3"
            android:layout_width="@dimen/widget_completion_dot_small"
            android:layout_height="@dimen/widget_completion_dot_small"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/widget_completion_dot_incomplete" />

        <ImageView
            android:id="@+id/completion_day_4"
            android:layout_width="@dimen/widget_completion_dot_small"
            android:layout_height="@dimen/widget_completion_dot_small"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/widget_completion_dot_incomplete" />

        <ImageView
            android:id="@+id/completion_day_5"
            android:layout_width="@dimen/widget_completion_dot_small"
            android:layout_height="@dimen/widget_completion_dot_small"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/widget_completion_dot_incomplete" />

        <ImageView
            android:id="@+id/completion_day_6"
            android:layout_width="@dimen/widget_completion_dot_small"
            android:layout_height="@dimen/widget_completion_dot_small"
            android:layout_marginHorizontal="2dp"
            android:background="@drawable/widget_completion_dot_incomplete" />

    </LinearLayout>

</LinearLayout> 